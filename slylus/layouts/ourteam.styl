.ourteam
  background : #2980b9
  padding : 40px 0
  margin-top : 60px

.team-row
  text-align : center
  h3
    color : #ffffff
    font-weight : 700
    font-family : 'Droid Sans', sans-serif
    font-size : 45px
    padding : 0 0 20px 0

.team-row-column
  padding : 0 30px
  text-align : center
  img
    background : #ffffff
    border-radius : 130px
    padding : 5px 0
  h4
    margin : 40px 0 20px 0
    a
      color : #ffffff
      font-weight : 700
      font-family : 'Droid Sans', sans-serif
      font-size : 26px
      text-decoration : none
      &:hover
        color : #2ecc71
        transition : all 0.3s ease
  p
    color : rgba(255, 255, 255, 0.92)
    font-family : 'Droid Serif', serif
    font-weight : 400
    font-size : 18px
    line-height : 30px
    padding : 0 0 20px 0

ul.social li
  display : inline-block
  margin : 0 20px 0 0
  i
    background : url(../img/img-sprite.png)
    width : 64px
    height : 64px
    display : block
    cursor : pointer
    &:hover
      transition : all 0.3s ease
  i.fa
    background-position : -7px 0
    &:hover
      background-position : -7px -65px
  i.tw
    background-position : -68px 0
    &:hover
      background-position : -68px -65px
  i.ist
    background-position : -132px 0
    &:hover
      background-position : -132px -65px