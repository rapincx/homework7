.about
  background : #34495e
  padding : 40px 0

.about-para
  text-align : center
  padding : 40px 0
  h3
    color : #ffffff
    font-weight : 700
    font-family : 'Droid Sans', sans-serif
    font-size : 45px
    padding : 0 0 20px 0
  p
    color : rgba(255, 255, 255, 0.89)
    font-weight : 400
    font-size : 24px
    text-align : left
    padding : 0 180px

.about-row
  padding : 20px 0

.about-row-column
  text-align : center
  h3 a
    color : #ffffff
    font-weight : 700
    font-family : 'Droid Sans', sans-serif
    font-size : 26px
    padding : 10px 0
    text-decoration : none
    &:hover
      color : #2ecc71
      transition : all 0.3s ease
  p
    color : rgba(255, 255, 255, 0.88)
    font-weight : 400
    font-size : 17px
    padding : 10px 64px
  i.icon1
    width : 170px
    height : 170px
    background : url(../img/img-resources.png) no-repeat 0 0
    display : inline-block
  i.icon2
    width : 170px
    height : 170px
    background : url(../img/img-resources.png) no-repeat -170px 0
    display : inline-block
  i.icon3
    width : 170px
    height : 170px
    background : url(../img/img-resources.png) no-repeat -340px 0
    display : inline-block